  <meta property="og:site_name" content="Transparental Solutions">

  <!-- Twitter Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="Trusted Partner in IT & Custom Software Development - Transparental Solutions">
  <meta name="twitter:description" content="This version highlights transformation and strategic services, focusing on how Transparental Solutions helps businesses grow with tailored IT and software offerings.">
